{
    "name": "empaphy/usephul",
    "description": "Provides useful classes and functions that extend the standard functionality of PHP.",
    "type": "library",
    "keywords": ["useful", "helpers"],
    "homepage": "https://usephul.empaphy.org/",
    "license": "MIT",
    "authors": [
        { "name": "Alwin Garside", "email": "alwin@garsi.de",  "homepage": "https://yogarine.net" }
    ],
    "support": {
        "issues": "https://github.com/empaphy/usephul/issues",
        "source": "https://github.com/empaphy/usephul",
        "docs": "https://usephul.empaphy.org/",
        "rss": "https://github.com/empaphy/usephul/releases.atom"
    },
    "require": {
        "php": ">=8.1",
        "empaphy/polyphill-php": "^1.804"
    },
    "require-dev": {
        "empaphy/filharmonic": "^1",
        "friendsofphp/php-cs-fixer": "^3",
        "pestphp/pest": "^4 || ^3 || ^2",
        "phpstan/phpstan": "^2"
    },
    "autoload": {
        "files": [
            "src/array.php",
            "src/constants.php",
            "src/debug.php",
            "src/generators.php",
            "src/Math/functions.php",
            "src/other.php",
            "src/pcre.php",
            "src/Path/functions.php",
            "src/Type/functions.php",
            "src/Var/functions.php"
        ],
        "psr-4": {
            "empaphy\\usephul\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "stan": "vendor/bin/phpstan --memory-limit=1G",
        "test": "vendor/bin/pest"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
